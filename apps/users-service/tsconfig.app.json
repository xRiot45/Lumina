{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "nodenext",
        "types": ["node"],
        "moduleResolution": "nodenext",
        "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2021"
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "out-tsc",
        "dist",
        "jest.config.ts",
        "jest.config.cts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs"
    ],
    "references": [
        {
            "path": "../../libs/shared/logger/tsconfig.lib.json"
        },
        {
            "path": "../../libs/shared/dto/tsconfig.lib.json"
        },
        {
            "path": "../../libs/shared/interfaces/tsconfig.lib.json"
        },
        {
            "path": "../../libs/shared/entities/tsconfig.lib.json"
        }
    ]
}
