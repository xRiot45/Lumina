{
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "lib": ["es2022"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "customConditions": ["@lumina/source"],
        "paths": {
            "@lumina/shared-common": ["libs/shared/common/src/index.ts"],
            "@lumina/shared-dto": ["libs/shared/dto/src/index.ts"],
            "@lumina/shared-entities": ["libs/shared/entities/src/index.ts"],
            "@lumina/shared-logger": ["libs/shared/logger/src/index.ts"],
            "@lumina/shared-types": ["libs/shared/types/src/index.ts"],
            "@lumina/shared-utils": ["libs/shared/utils/src/index.ts"],
            "@lumina/shared-interfaces": ["libs/shared/interfaces/src/index.ts"]
        }
    }
}
